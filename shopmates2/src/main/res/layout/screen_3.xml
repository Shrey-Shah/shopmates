<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#FFFFFF">
    
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_above="@+id/bottom">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ORDER"
                android:padding="15dp"
                android:textColor="#888888"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/orderHeader"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                style="@android:style/TextAppearance.Medium" />
            
            <TextView
            	android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" 
                android:textColor="#686e7a"
                android:id="@+id/orderText"
                style="@android:style/TextAppearance.Medium"
                android:layout_margin="15dp"
                android:layout_gravity="center"
                android:gravity="center" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FROM"
                android:padding="5dp"
                android:id="@+id/fromHeader"
                style="@android:style/TextAppearance.Medium"
                android:textColor="#888888"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_margin="5dp" />
            
            <TextView
            	android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" 
                android:textColor="#686e7a"
                android:id="@+id/fromText"
                style="@android:style/TextAppearance.Medium"
                android:layout_margin="15dp"
                android:layout_gravity="center"
                android:gravity="center" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TO"
                android:padding="15dp"
                android:id="@+id/toHeader"
                style="@android:style/TextAppearance.Medium"
                android:textColor="#888888"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_margin="5dp" />
            
            <TextView
            	android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" 
                android:textColor="#686e7a"
                android:id="@+id/toText"
                style="@android:style/TextAppearance.Medium"
                android:layout_margin="15dp"
                android:layout_gravity="center"
                android:gravity="center" />
           
        </LinearLayout>
    </ScrollView>
    
    <RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="50dp"
	    android:id="@+id/bottom"
	    android:layout_alignParentBottom="true">
	
	<com.balysv.materialripple.MaterialRippleLayout
    		android:layout_width="match_parent"
    		android:layout_height="fill_parent"
    		android:id="@+id/container"
            app:mrl_rippleOverlay="true"
            app:mrl_rippleColor="#DDD"
            app:mrl_rippleAlpha="0.7"
            app:mrl_rippleDimension="45dp"
            app:mrl_rippleHover="true"
            app:mrl_rippleDuration="200"
            app:mrl_rippleFadeDuration="50"
            app:mrl_rippleBackground="@android:color/transparent"
            app:mrl_rippleDelayClick="true"
            app:mrl_ripplePersistent="false"
            app:mrl_rippleInAdapter="false">
	
	<Button
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:gravity="center"
	    android:text="Place Order"
	    style="@android:style/TextAppearance.Medium"
	    android:background="#686e7a"
	    android:textColor="#FFFFFF" 
	    android:layout_alignParentBottom="true" 
	    android:id="@+id/placeOrder" />
	
	</com.balysv.materialripple.MaterialRippleLayout>
		    
	</RelativeLayout>
        

</RelativeLayout>
